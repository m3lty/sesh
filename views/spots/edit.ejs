<% include ../partials/header %>
<div class="container">
  <h1 class="text-center">Edit <%= spot.name %></h1>
  <div class="row">
    <form action="/spots/<%= spot._id%>?_method=PUT" method="post">
      <div class="form-group">
        <input class="form-control" type="text" name="spot[name]" value="<%= spot.name %>">
      </div>
      <div class="form-group">
        <input class="form-control" type="text" name="spot[desc]" value="<%= spot.desc %>">
      </div>
      <div class="form-group">
        <input class="form-control" type="text" name="spot[image]" value="<%= spot.image %>">
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Submit</button>
      </div>
    </form>
    <a href="/">Back to Convention List</a>
  </div>
</div>

<% include ../partials/footer %>